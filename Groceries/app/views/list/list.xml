<Page loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Groceries">
            <ActionBar.actionItems>
                <ActionItem text = "Compartir" tap="share" 
                ios.position="rigth"
                android.systemIcon="ic_menu_share" android.position="actionBar"/>
                <ActionItem tap="goToSearch" 
                ios.systemIcon="9" ios.position="left" 
                text="Buscar" android.position="popup"/>
                <ActionItem tap="logOut" 
                ios.position="left" 
                text="Salir" android.position="popup"/>
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="auto, *" columns="2*, *, auto">
        <TextField id="grocery" text="{{ grocery }}" hint="Ingresa un comestible" row="0" col="0"/>
        <TextField id="quantity" text="{{ quantity }}" hint="qty" row="0" col="1"/>        
        <Button text="Agregar" tap="add" row="0" col="2"/>
        <ListView items="{{ groceryList }}" id="groceryList" row="1" colSpan="3">
            

            <ListView.itemTemplate>
                <GridLayout columns="2*, *, auto">
                    <Label text="{{ name }}"/>
                    <Label text= "{{ qty }}" col="1"/>
                    <Image src="res://ic_menu_delete" ios:visibility="collapsed" col="2" tap="delete"/>
                </GridLayout>
            </ListView.itemTemplate>

        </ListView>
        <ActivityIndicator busy="{{ isLoading }}" rowSpan="2" colSpan="2"/>
    </GridLayout>
</Page>
